# ================================
# SUPABASE POSTGRESQL CONFIGURATION EXAMPLE
# ================================
# Copy this file to application-supabase.properties and replace with your actual values
# Set environment variables or replace placeholders with actual Supabase credentials

# Example Supabase URL format:
# spring.datasource.url=jdbc:postgresql://aws-x-xx-xxxx-x.pooler.supabase.com:5432/postgres?sslmode=require
spring.datasource.url=${DB_URL:jdbc:postgresql://localhost:5432/todolist}
spring.datasource.username=${DB_USERNAME:postgres}
spring.datasource.password=${DB_PASSWORD:password}
spring.datasource.driver-class-name=org.postgresql.Driver

# ================================
# JPA CONFIGURATION
# ================================
spring.jpa.hibernate.ddl-auto=none
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.PostgreSQLDialect
spring.jpa.properties.hibernate.jdbc.lob.non_contextual_creation=true

# ================================
# FLYWAY MIGRATION
# ================================
spring.flyway.enabled=true
spring.flyway.locations=classpath:db/migration
spring.flyway.baseline-on-migrate=true
spring.flyway.validate-on-migrate=false

# ================================
# HOW TO USE:
# ================================
# Option 1: Set environment variables before running:
# set DB_URL=jdbc:postgresql://your-supabase-url:5432/postgres?sslmode=require
# set DB_USERNAME=postgres.your_ref
# set DB_PASSWORD=your_password
#
# Option 2: Replace ${...} placeholders directly with your values
# (NOT RECOMMENDED for production or shared repositories)
